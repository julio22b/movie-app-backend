{
    "name": "movie-app-backend",
    "version": "0.0.0",
    "scripts": {
        "build": "tsc",
        "lint": "eslint -c .eslintrc --ext .ts ./src",
        "start": "tsc && node /dist/index.js",
        "dev": "NODE_ENV=development nodemon ./src",
        "test": "NODE_ENV=test jest --runInBand ./src/tests/",
        "build:ui": "rm -rf build && cd ../movie-app-frontend && npm run build && cp -r build ../movie-app-backend"
    },
    "engines": {
        "node": "12.16.3",
        "npm": "6.14.5"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts, html",
        "ignore": [
            "src/public"
        ],
        "exec": "ts-node -r tsconfig-paths/register ./src"
    },
    "_moduleAliases": {
        "@daos": "dist/daos",
        "@entities": "dist/entities",
        "@shared": "dist/shared",
        "@server": "dist/Server"
    },
    "dependencies": {
        "@babel/core": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "babel-jest": "^26.1.0",
        "bcryptjs": "^2.4.3",
        "cloudinary": "^2.4.0",
        "command-line-args": "^6.0.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-async-errors": "^3.1.1",
        "express-validator": "^7.2.0",
        "helmet": "^7.1.0",
        "http-status-codes": "^2.3.0",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "moment": "^2.27.0",
        "mongoose": "^8.5.3",
        "mongoose-unique-validator": "^5.0.1",
        "morgan": "^1.10.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "ts-node": "^10.9.2",
        "tslib": "^2.6.3",
        "typescript": "^5.5.4",
        "winston": "^3.14.2"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.10.4",
        "@types/bcryptjs": "^2.4.6",
        "@types/command-line-args": "^5.2.3",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-validator": "^3.0.0",
        "@types/find": "^0.2.4",
        "@types/helmet": "^4.0.0",
        "@types/jest": "^29.5.12",
        "@types/jsonfile": "^6.1.4",
        "@types/moment": "^2.13.0",
        "@types/mongodb-memory-server": "^2.3.0",
        "@types/mongoose": "^5.11.97",
        "@types/mongoose-unique-validator": "^1.0.9",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.5.0",
        "@types/passport": "^1.0.16",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.2.0",
        "@typescript-eslint/parser": "^8.2.0",
        "eslint": "^8.56.0",
        "find": "^0.3.0",
        "fs-extra": "^9.0.1",
        "jest": "^26.1.0",
        "jsonfile": "^6.0.1",
        "mongodb-memory-server": "^6.6.1",
        "nodemon": "^2.0.4",
        "supertest": "^4.0.2",
        "tsconfig-paths": "^3.9.0"
    }
}
